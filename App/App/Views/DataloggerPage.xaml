<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.Views.DataloggerPage"
             Title="Pair datalogger">
    <ContentPage.Content>
        <StackLayout Padding="8">
            <Label Text="ID" />
            <Entry Text="{Binding LoggerId}" />
            <Button Command="{Binding PairDataloggerCommand}" Text="Create" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>