<?xml version="1.0" encoding="utf-8" ?>
    
<ContentPage Title="Menu" xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="App.MainPage">

    <StackLayout Padding="8" VerticalOptions="Center">
        <Button Command="{Binding RegisterPageNavCommand}" Text="Register Plant" BackgroundColor="Gray" FontAttributes="Bold" />
        <Button Command="{Binding SecondPageNavCommand}" Text="Show Data" BackgroundColor="Gray" FontAttributes="Bold" Margin="0, 15" />
        <Button Command="{Binding NotificationPageNavCommand}" Text="Notifications" BackgroundColor="Gray" FontAttributes="Bold" />
    </StackLayout>
   
</ContentPage>
